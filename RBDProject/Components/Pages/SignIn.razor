@using RBDProject.Components.Layout

@layout EmptyLayout
@page "/SignIn"

@inject NotificationService _notificationService
@inject TooltipService _tooltipService
 
<section class="bg-light d-flex flex-row justify-content-center align-items-center" style="height:100vh">
    <div class="card shadow-lg w-100" style="max-width: 480px;">
        <div class="card-body">
            <div class="text-center">
                <h1 class="card-title h3">Iniciar Session</h1>
                <p class="card-text text-muted">Aliance Software Proyecto</p>
            </div>
            <div class="mt-4">
                <form action="">
                    <div class="mb-4">
                        <label for="email" class="form-label text-muted">Usuario</label>
                        <input type="text" class="form-control" id="email" placeholder="usuario" required>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label text-muted">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-lg">Ingresar</button>
                    </div>
                    <p class="text-center text-muted mt-4">
                        ¿Olvidaste tu contraseña?
                        <a href="#!" class="text-decoration-none">Enviar Ticket</a>.
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>


